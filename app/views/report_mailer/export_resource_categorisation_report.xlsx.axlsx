wb = xlsx_package.workbook

wb.add_worksheet(name: 'Billable Resources') do |sheet|
  sheet.add_row(['Employee Name', 'Total Allocation'])
  billable_resources.each do | resource |
    sheet.add_row [ resource[:name], resource[:allocation] ]
  end
end

