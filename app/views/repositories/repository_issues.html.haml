.row
  %h4{style:"float:left;"} #{@repo_name.upcase} &nbsp; > &nbsp; ISSUES :
  - if @response_body && @response_body['meta']
    %h4{style:"float:right;"} Total Issues : #{@response_body['meta']['total_count']}

%div{class:"form-horizontal"}
  %table.table.table-hover#issues_table
    %thead
      %tr
        %th #
        %th Description
        %th Severity
        %th Category
        %th File
        %th Line Number
    %tbody
      %script#issues_template{:type => "text/html"}
        %tr
          {{#record}}
          %td
            {{index}}
          %td
            {{attributes.description}}
          %td{style:"color:{{color}}; font-weight:bold"}
            {{attributes.severity}}
          %td
            {{attributes.categories}}
          %td
            {{attributes.constant_name}}
          %td
            {{attributes.location.start_line}}
          {{/record}}

:coffeescript
  @data = #{@response_body["data"].to_json}
