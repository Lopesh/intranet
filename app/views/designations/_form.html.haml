= simple_form_for @designation, :html => {class: "form-horizontal"} do |f|
  .control-group
    .row
      .col-md-6
        = f.input :name, required: false, class: 'pull-left'
        .control-group
          = label_tag "Parent/Senior Level Designation", nil, class: 'control-label'
          .controls
            = select_tag :parent_designation_id, options_for_select(Designation.pluck(:name, :id), f.object.try(:designation).try(:id)), {:prompt => "-- Select Designation --", class: "list", name: "designation[parent_designation_id]", style: "width: 340px"}
    = f.submit :Save, class: 'btn controls btn-info'

:javascript
  $(".list").select2();
