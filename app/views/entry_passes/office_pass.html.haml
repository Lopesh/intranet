= content_tag :a, "", :href => "#office_entry_modal", :class => 'icon-plus pull-right', :data => {:toggle => 'modal'}, "data-toggle" => "tooltip", title: "Create Entry Pass"
= render 'modal'
= link_to "", entry_passes_path, :class => 'icon-th-list pull-right', :data => {:toggle => 'modal'}, "data-toggle" => "tooltip", title: "List Entry Passes"

%h2
  = "Office Pass of #{current_user.name}"
%table.table.table-bordered.span4.text-center
  %thead
    %tr
      %th Date
      %th Action
  %tbody
    - @current_user_passes.each do |entry_pass|
      %tr
        %td
          = entry_pass.date
        %td
          = button_to "Delete", entry_pass_path(:id => entry_pass.id), :method => :delete, :class => "btn btn-danger"
