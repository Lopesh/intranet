= content_tag :a, "", :href => "#office_entry_modal", :class => 'icon-plus pull-right', :data => {:toggle => 'modal'}, "data-toggle" => "tooltip", title: "Create Entry Pass"
= render 'modal'

- if ["HR", "Admin"].include?(current_user.role)
  = render 'download_report'

%h2 List of people allowed to work from office
- (Date.today..Date.today + 7).each do |date|
  %h4
    - if date == Date.today
      = "Today #{date}"
    - elsif date == Date.today + 1
      = "Tomorrow #{date}"
    - else
      = date if @office_passes.select{|pass| pass.date == date}.count > 0
  %table.table.table-bordered
    %tbody
      - @office_passes.each_with_index do |entry_pass, index|
        - if index.modulo(7) == 0
          %tr
        - if entry_pass.date == date
          %td{ :class => ("text-success" if (User.where({id: entry_pass.user_id}).first.try(:name) == current_user.name)) }
            = User.where({id: entry_pass.user_id}).first.try(:name)
            - if can? :manage, EntryPass
              = link_to "X", entry_pass_path(:id => entry_pass.id), :method => :delete, :class => "pull-right delete-entry"
          
      